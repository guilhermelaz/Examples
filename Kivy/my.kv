<MyGrid>

    username: username
    password: password

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
            text: "Kodinx"

        GridLayout:
            cols:2

            Label:
                text: "Username"
            TextInput:
                id: username
                multiline: False

            Label:
                text: "Password"
            TextInput:
                id: password
                multiline: False
                password: True

        Button:
            text: "Login"
            on_press: root.btn_login()